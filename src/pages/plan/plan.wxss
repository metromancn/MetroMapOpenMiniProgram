.metro-image {
  width: 100%;
}

.map-full {
  position: absolute;
  right: 16px;
  top: 16px;
  width: 40px;
  height: 40px;
  border-radius: 20px;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.16);
  -webkit-box-shadow:0px 2px 8px 0px rgba(0, 0, 0, 0.16);
}

/* footer */
.footer-layout {
  position:relative;
  margin-top: 16px;
  width: 100%;
  height: 96px;
}

.footer-button {
  display: flex;
  width: 80px;
  height: 100%;
  margin: 0px;
  padding: 0px;
  flex-direction: column;
  align-items: center;
  background: var(--mmColorPageBack);
}

/* common */
button::after {
  border: none;
}