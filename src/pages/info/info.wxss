::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.layout-map {
  position: relative;
  margin-top: 16px;
  margin-bottom: 16px;
  width: 100%;
  height: 180px;
}

.map-map {
  position: absolute;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 180px;
  border: solid 1px var(--mmColorLine);
  border-radius: 2px;
}

.map-full {
  position: absolute;
  right: 10px;
  top: 130px;
  width: 40px;
  height: 40px;
  border-radius: 20px;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.16);
  -webkit-box-shadow:0px 2px 8px 0px rgba(0, 0, 0, 0.16);
}